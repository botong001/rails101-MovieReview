<div class="col-md-12">
  <div class="group">
    <%= link_to("添加新电影", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>

        <td>电影名称</td>
        <td>电影简介</td>
        <td>创建者</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>

        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td><%= group.user.email %></td>
        <td>
        <%= link_to("修改", edit_group_path(group), class: "btn btn-sm btn-default")%>
        <%= link_to("删除", group_path(group),    class: "btn btn-sm btn-default",
                    method: :delete, data: { confirm: "确定要删除此电影吗?" } )%>
        </td>
        </tr>
        <% end %>
        </tbody>
        </table>
        </div>
