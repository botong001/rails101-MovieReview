<%= form_for @group do |f| %>

<div class="form-group">
    <div class="form-group string optional">
        <%= f.label "电影名称", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>

    <div class="form-group string optional">
        <%= f.label "电影简介", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>

    </div>
    <%= f.submit "保存", class: "btn btn-primary", data: { disable_with: "保存..." } %>
    <% end %>
