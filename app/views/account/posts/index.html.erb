<div class="col-md-12">

  <h2 class="text-center"> 我创建过的影评列表 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 影评内容 </th>
        <th> 电影名称 </th>
        <th> 影评生成时间 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td> <%= post.content %> </td>
        <td> <%= post.group.title %> </td>
        <td> <%= post.updated_at %> </td>
        <td> <%= link_to('修改影评', edit_group_post_path(post.group, post), class: "btn btn-default btn-xs") %></td>
        <td> <%= link_to('删除影评', group_post_path(post.group, post), method: :delete, data: { confirm: "Are you suer?" }, class: "btn btn-default btn-xs") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
